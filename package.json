{
  "name": "react-gallery-magnifier",
  "version": "0.2.5",
  "private": false,
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "analyze": "vite-bundle-visualizer",
    "analyze:lint": "npx eslint ./lib",
    "assets:serve": "serve assets -p 8000 --cors",
    "build": "vite build",
    "dev": "vite",
    "docs:serve": "cd docs && npm run serve",
    "size": "npm run build && size-limit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@size-limit/preset-big-lib": "^11.1.2",
    "@size-limit/webpack-css": "^11.1.2",
    "@size-limit/webpack-why": "^11.1.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/glob": "^8.1.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.12.5",
    "@types/react": "18.2.46",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.5.2",
    "eslint": "^9.1.1",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^10.3.12",
    "jsdom": "^24.0.0",
    "react": "18.2.0",
    "react-dom": "^18.2.0",
    "serve": "^14.2.1",
    "size-limit": "^11.1.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.1",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite": "^5.2.7",
    "vite-bundle-visualizer": "^1.1.0",
    "vite-plugin-dts": "^3.8.1",
    "vite-plugin-lib-inject-css": "^2.0.1",
    "vitest": "^1.4.0"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "size-limit": [
    {
      "name": "import {Title} from 'react-gallery-magnifier'",
      "path": "dist/index.js",
      "import": "{Title}",
      "limit": "2kB"
    },
    {
      "name": "import {ImageMagnifier} from 'react-gallery-magnifier'",
      "path": "dist/index.js",
      "import": "{ImageMagnifier}",
      "limit": "2kB"
    },
    {
      "name": "import {BigComponent} from 'react-gallery-magnifier'",
      "path": "dist/index.js",
      "import": "{BigComponent}",
      "limit": "50kB"
    }
  ]
}
